    <div class="usr-profile w-100 text-center d-flex flex-column align-items-center">
      <div class="">
        <%= image_tag @user.photo ? @user.photo_url : "profile.jpg", alt: @user.full_name, class: "profile-img d-block mb-3"%>
        <%= follow_user_link @user, class: "btn btn-outline-primary py-1 px-4 font-weight-bold" %>
      </div>

      <div class="clearfix mt-3">
        <div class="info">
          <h5 class="mb-1"><%= @user.full_name %></h5>
          <h6 class="text-muted">@<%= @user.username %></h6>
        </div>
        <hr>
        <div class="mt-3 d-flex justify-content-around">
          <%= link_to '#', class: "text-dark py-2 px-3 d-block" do%>
            <span class="font-weight-bold d-block h3"><%= @user.opinions.count %> </span>
            <span class="text-muted"> <%= 'Opinion'.pluralize(@user.opinions.count) %></span>
          <% end %>
          <%= link_to user_following_path(@user), class: "text-dark py-2 px-3 d-block border-left border-right" do%>
            <span class="font-weight-bold d-block h3"><%= @user.follows.count %> </span>
            <span class="text-muted">Following</span>
          <% end %>
          <%= link_to user_follower_path(@user), class: "text-dark py-2 px-3 d-block" do %>
            <span class="font-weight-bold d-block h3"><%= @user.followers.count %></span>
            <span class="text-muted"> <%= 'Follower'.pluralize(@user.followers.count) %></span>
          <% end %>
        </div>
        <hr>
      </div>
    </div>
