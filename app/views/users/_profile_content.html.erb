<div class="profile-content bg-white">
  <ul class="nav nav-tabs justify-content-between" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="opinion-tab" data-bs-toggle="tab" data-bs-target="#opinion" type="button" role="tab" aria-controls="opinion" aria-selected="true">opinion</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Tweets & replies</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Media</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Likes</button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="opinion" role="tabpanel" aria-labelledby="opinion-tab">
      <% @user.opinions.each do |opinion| %>
        <%= render 'opinions/opinion', opinion: opinion %>
      <% end %>
    </div>
  </div>
</div>
