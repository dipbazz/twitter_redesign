
<div class="container-fluid authentication">
  <div class="row">
    <div class="col col-md-7 order-1 order-md-0 authentication-left">
    </div>
    <div class="col col-md-5 order-0 order-md-1 authentication-right d-md-flex align-items-center">
      <div class="w-100">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "authentication-form"}) do |f| %>
          <div class="form-group position-relative">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            <%= f.label :email, class: "position-absolute form-label" %>
          </div>

          <div class="actions my-4">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary px-4" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
