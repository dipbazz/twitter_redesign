<div class="container-fluid authentication">
  <div class="row">
    <div class="col col-md-7 order-1 order-md-0 authentication-left">
    </div>
    <div class="col col-md-5 order-0 order-md-1 authentication-right d-md-flex align-items-center">
      <div class="w-100">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "authentication-form"}) do |f| %>
          <div class="form-group position-relative">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", required: true %>
            <%= f.label :username, class: "position-absolute form-label" %>
          </div>

          <div class="form-group position-relative">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
            <%= f.label :password, class: "position-absolute form-label" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="custom-control custom-checkbox">
              <%= f.check_box :remember_me, class: "custom-control-input" %>
              <%= f.label :remember_me, class: "custom-control-label" %>
            </div>
          <% end %>

          <div class="actions my-4">
            <%= f.submit "Log in", class: "btn btn-primary px-4" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
