<div class="container-fluid authentication">
  <div class="row">
    <div class="col col-md-7 order-1 order-md-0 authentication-left">
    </div>
    <div class="col col-md-5 authentication-right d-md-flex align-items-center">

      <div class="w-100">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "authentication-form"}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group position-relative">
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full name", class: "form-control", required: true %>
            <%= f.label :full_name, class: "form-label position-absolute" %>
          </div>

          <div class="form-group position-relative">
            <%= f.text_field :username, autocomplete: "username", class: "form-control", required: true %>
            <%= f.label :username, class: "form-label position-absolute" %>
          </div>

          <div class="form-group position-relative">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
            <%= f.label :email, class: "form-label position-absolute" %>
          </div>

          <div class="form-group position-relative">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
            <%= f.label :password, class: "form-label position-absolute" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="form-group position-relative">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            <%= f.label :password_confirmation, class: "form-label position-absolute" %>
          </div>

          <div class="actions my-4">
            <%= f.submit "Sign up", class: "btn btn-primary px-4" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
